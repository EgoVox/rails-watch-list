<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<div class="container">
  <ul class="list">
    <% @lists.each do |list| %>
      <li class="card-item">
        <div class="card">
          <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8JTIzcmVzdGF1cmFudHxlbnwwfHwwfHx8MA%3D%3D" alt="">
          <%= link_to list.name, list_path(list) %>
          <%= link_to 'Delete', list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger' %>
        </div>
      </li>
    <% end %>
  </ul>
  <hr>
  <%= link_to "add a list", new_list_path %>
</div>
